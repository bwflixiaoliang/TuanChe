<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.bwf.tuanche.Activity.DeatilActivity">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_back_detail"
            android:layout_width="0dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:paddingRight="5dp"
            android:src="@mipmap/icon_back"
            />
        <TextView
            android:id="@+id/carname"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/colorblack"
            android:text="%s-%s"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:layout_weight="4"
            android:textSize="@dimen/text_16"
            />
        <ImageView
            android:id="@+id/search_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_fenxiang"
            android:textColor="@color/colorblack"
            android:padding="9dp"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView_detail"
        android:layout_below="@id/title"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/deatil_frag1"
                android:name="com.bwf.tuanche.fragment.DetailFramgent.DetailFragment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/deatil_frag2"
                android:name="com.bwf.tuanche.fragment.DetailFramgent.DetailFragment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/deatil_frag3"
                android:name="com.bwf.tuanche.fragment.DetailFramgent.DetailFragment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/deatil_frag4"
                android:name="com.bwf.tuanche.fragment.DetailFramgent.DetailFragment4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/deatil_frag5"
                android:name="com.bwf.tuanche.fragment.DetailFramgent.DetailFragment5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bgred"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/text_18"
        android:textColor="@color/colorwhite"
        android:layout_marginBottom="20dp"
        android:text="团购报名"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>
