<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwf.tuanche.MainListActivity">
    <LinearLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorblack"
            android:text="123"
            android:paddingRight="5dp"
            android:drawableRight="@mipmap/icon_top_add_arrow"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:layout_weight="5"
            android:textSize="@dimen/text_14"
            android:hint="请输入品牌、车型"
            android:background="@drawable/shape_black"
            android:drawableLeft="@mipmap/search"
            />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_top_icon_saomiao"
        android:padding="5dp"
        />
    </LinearLayout>
<ScrollView
    android:layout_below="@id/main_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:id="@+id/main_list_frag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.bwf.tuanche.fragment.MainlistFragment.MainListFragment_1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray"
            />
        <fragment
            android:id="@+id/main_list_frag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.bwf.tuanche.fragment.MainlistFragment.MainListFragment_2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray"
            />
    </LinearLayout>
</ScrollView>
</RelativeLayout>
