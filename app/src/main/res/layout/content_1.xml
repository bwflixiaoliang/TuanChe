<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:id="@+id/content_city"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorblack"
            android:paddingRight="5dp"
            android:drawableRight="@mipmap/icon_top_add_arrow"
            />
        <EditText
            android:id="@+id/search_ed"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="34dp"
            android:paddingTop="2dp"
            android:layout_weight="5"
            android:textSize="@dimen/text_14"
            android:focusable="false"
            android:hint="请输入品牌、车型"
            android:background="@drawable/shape_black1"
            android:drawableLeft="@mipmap/search"
            />
        <ImageView
            android:id="@+id/mainList_Zxing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_top_icon_saomiao"
            android:padding="10dp"
            />
    </LinearLayout>
    <com.bwf.tuanche.View.ReScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.bwf.tuanche.View.ReScrollView>
</LinearLayout>