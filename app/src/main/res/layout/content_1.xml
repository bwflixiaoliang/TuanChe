<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorblack"
            android:text="成都"
            android:paddingRight="5dp"
            android:drawableRight="@mipmap/icon_top_add_arrow"
            />
        <EditText
            android:id="@+id/search_ed"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:layout_weight="5"
            android:textSize="@dimen/text_14"
            android:focusable="false"
            android:hint="请输入品牌、车型"
            android:background="@drawable/shape"
            android:drawableLeft="@mipmap/search"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_top_icon_saomiao"
            android:padding="10dp"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/main_list_frag1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.bwf.tuanche.fragment.MainlistFragment.MainListFragment_1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/main_list_frag2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.bwf.tuanche.fragment.MainlistFragment.MainListFragment_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/main_list_frag3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.bwf.tuanche.fragment.MainlistFragment.MainListFragment_3"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"
                />
            <fragment
                android:id="@+id/main_list_frag4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.bwf.tuanche.fragment.MainlistFragment.MainListFragment_4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>