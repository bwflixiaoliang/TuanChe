<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.Activity.CarContentActivity"
    tools:showIn="@layout/activity_car_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@color/huise">

       <ImageView
           android:id="@+id/content_back"
           android:layout_width="0dp"
           android:layout_height="60dp"
           android:layout_weight="0.5"
           android:background="@color/white"
           android:padding="12dp"
           android:src="@mipmap/icon_back"/>


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="5"
           android:gravity="center"
           android:orientation="horizontal"
           android:background="@color/white">

           <Button
               android:id="@+id/Loge_car"
               android:layout_width="100dp"
               android:layout_height="35dp"
               android:background="@mipmap/round_red_left"
               android:text="@string/Loge_car"
               android:textColor="@color/white"
               android:textSize="@dimen/Loge_carText_14sp" />

           <Button
               android:id="@+id/Tiaojian_car"
               android:layout_width="100dp"
               android:layout_height="35dp"
               android:background="@mipmap/round_white_right"
               android:text="@string/Tiaojian_car"
               android:textColor="@color/read"
               android:textSize="@dimen/Loge_carText_14sp" />
       </LinearLayout>

       <ImageView
           android:id="@+id/content_search"
           android:layout_width="0dp"
           android:layout_height="60dp"
           android:layout_weight="0.5"
           android:padding="8dp"
           android:background="@color/white"
           android:src="@mipmap/search_icon_search" />
   </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/logo_tiaojian_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
