<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/deatil_img"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:background="@color/gray"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginRight="1dp"
                android:background="@color/colorwhite"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_18"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorblack"
                    android:text="本期已报名"
                    />
                <TextView
                    android:id="@+id/baoming"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_18"
                    android:gravity="center_horizontal"
                    android:text="123"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:background="@color/colorwhite"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/leiji"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_18"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorblack"
                    android:text="123"
                    />
                <TextView
                    android:id="@+id/jiesheng"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_18"
                    android:gravity="center_horizontal"
                    android:text="123"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorwhite"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tuangou_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:textColor="@color/colorblack"
                android:text="团购时间：%s"
                />
            <TextView
                android:id="@+id/tuangou_address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:textColor="@color/colorblack"
                android:text="团购地点：%s"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tuangou_price"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:drawableRight="@mipmap/icon_help"
                    android:textColor="@color/colorblack"
                    android:text="团购价格：现场公布"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <Button
                android:id="@+id/deatil_bt_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/text_14"
                android:drawableRight="@mipmap/icon_arraw_right"
                android:textColor="@color/colorblack"
                android:padding="5dp"
                android:text="奔驰"
                android:background="@drawable/white_btn_normal"
                android:gravity="left|center_vertical"
                />
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/text_14"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorblack"
                android:padding="5dp"
                android:hint="请输入手机号"
                android:background="@drawable/white_btn_normal"
                android:gravity="left|center_vertical" />
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/text_14"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorblack"
                android:padding="5dp"
                android:hint="请输入姓名"
                android:background="@drawable/white_btn_normal"
                android:gravity="left|center_vertical" />
            <Button
                android:id="@+id/deatil_bt_buystyle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/text_14"
                android:drawableRight="@mipmap/icon_grey_arrow_down"
                android:padding="5dp"
                android:hint="请选择购车方式"
                android:background="@drawable/white_btn_normal"
                android:gravity="left|center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="80dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_bgred"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_18"
                android:textColor="@color/colorwhite"
                android:text="团购报名"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:gravity="center"
                android:textColor="@color/colorblack"
                />
           </LinearLayout>
    </LinearLayout>
</LinearLayout>