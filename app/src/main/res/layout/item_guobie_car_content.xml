<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:freson="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/guojia_kuang"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_black"
        android:text="@string/guojia_text"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="@dimen/Loge_carText_14sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/guojia_image"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        freson:placeholderImage="@mipmap/default_special_2" />

</RelativeLayout>